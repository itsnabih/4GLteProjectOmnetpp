<?xml version="1.0" encoding="UTF-8"?>
<!-- lteCoreConfigFiles/ipAddresses.xml -->
<config>
    <interface hosts="*" address="10.x.x.x" netmask="255.x.x.x"/>
    
    <!-- UE Network -->
    <interface hosts="ue" address="10.0.0.1" netmask="255.255.255.0"/>
    <interface hosts="ue1" address="10.0.0.2" netmask="255.255.255.0"/>
    <interface hosts="ue2" address="10.0.0.3" netmask="255.255.255.0"/>
    
    <!-- eNodeB Network -->
    <interface hosts="eNodeB1" address="10.0.1.1" netmask="255.255.255.0"/>
    <interface hosts="eNodeB2" address="10.0.1.2" netmask="255.255.255.0"/>
    
    <!-- Core Network -->
    <interface hosts="router1" address="10.0.2.1" netmask="255.255.255.0"/>
    <interface hosts="router2" address="10.0.2.2" netmask="255.255.255.0"/>
    <interface hosts="coreRouter" address="10.0.2.3" netmask="255.255.255.0"/>
    
    <!-- UPF Network -->
    <interface hosts="upf1" address="10.0.3.1" netmask="255.255.255.0"/>
    <interface hosts="upf2" address="10.0.3.2" netmask="255.255.255.0"/>
    
    <!-- PGW and Edge Network -->
    <interface hosts="pgw" address="10.0.4.1" netmask="255.255.255.0"/>
    <interface hosts="edgeRouter" address="10.0.4.2" netmask="255.255.255.0"/>
    <interface hosts="standardHost" address="10.0.4.3" netmask="255.255.255.0"/>
    <interface hosts="InternetHost" address="10.0.4.4" netmask="255.255.255.0"/>
</config>